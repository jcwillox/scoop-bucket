    "url": "https://github.com/mrvnklm/homeassistant-desktop/releases/download/v1.4.10/Home-Assistant-Setup-1.4.10.exe#/dl.7z",
    "hash": "sha512:10587cee519b01e68eb4b233bb3605b0d56824924ff44b082629aa709d6663d7c07020efdf54f906548427acd7eb686ca262b3eebeb4b39506a20e810d45f2c0",
    "pre_install": [
        "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-32.7z\" \"$dir\"",
        "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\Uninstall*\" -Recurse"
    ],
    "uninstaller": {
        "script": [
            "if ($purge) {",
            "    $path = 'HKCU:\\Software\\Microsoft\\Windows\\CurrentVersion'",
            "    Remove-ItemProperty -Path \"$path\" -Name \"Home Assistant\"",
            "}"
        ]
    },
    "shortcuts": [
        [
            "Home Assistant.exe",
            "Home Assistant (Desktop)"
        ]
    ],
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/mrvnklm/homeassistant-desktop/releases/download/v$version/Home-Assistant-Setup-$version.exe#/dl.7z",
        "hash": {
            "url": "$baseurl/latest.yml",
            "regex": "sha512: $base64"
        }
    }
}
